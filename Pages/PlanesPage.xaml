<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1.Pages.PlanesPage"
             xmlns:models="clr-namespace:Proyecto1.Models"
             Title="PlanesPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Planes List"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Planes}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPlane}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                            Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Model}"
                                       HorizontalOptions="Start"/>
                                <Label Text="{Binding Manufacturer}"
                                       HorizontalOptions="Start"/>
                                <Image Source="{Binding ImagePath}"
                                       HeightRequest="200"
                                       WidthRequest="200"
                                       HorizontalOptions="End"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Add New Plane"
                VerticalOptions="End"
                Margin="0, 10, 0, 0"
                Clicked="OnAddNewPlane"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>