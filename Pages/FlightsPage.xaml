<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1.Pages.FlightsPage"
             xmlns:models="clr-namespace:Proyecto1.Models"
             Title="FlightsPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Available Flights"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Flights}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedFlight}"
                            SelectionChanged="OnFlightSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                                Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding FlightNumber}"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding DepartureDate, StringFormat='{0:dd/MM/yyyy}'}"/>
                                <Label Text="{Binding Price, StringFormat='Price {0:C}'}"/>
                            </VerticalStackLayout>
                            
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Add New Flight"
                    VerticalOptions="End"
                    Margin="0, 10, 0, 0"
                    Clicked="OnAddNewFlight"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>